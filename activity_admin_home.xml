<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminHomeActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:background="@drawable/theme1">
    </ImageView>

    <Button
        android:id="@+id/btnManageAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MANAGE ADMIN"
        app:backgroundTint="#3F51B5" />

    <Button

        android:id="@+id/btnManageLocate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MANAGE LOCATION"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btnManageUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="MANAGE USERS"
        app:backgroundTint="#3F51B5" />

    <ImageButton
        android:id="@+id/signout"
        android:onClick="signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_logout_24"
        android:drawableTint="@color/white" />

</LinearLayout>

